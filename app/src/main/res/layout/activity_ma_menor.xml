<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MA_Menor">
<ImageView
    android:id="@+id/imgBiberon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/biberon"
    />
    <TextView
        android:id="@+id/txtTitulo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menor de Edad"
        android:layout_below="@id/imgBiberon"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/txtSuma1"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:text="1"
        android:layout_below="@id/txtTitulo2"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/txtSuma"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:text="+"
        android:layout_below="@id/txtTitulo2"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="100sp"
        android:gravity="center"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/txtSuma2"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:text="2"
        android:layout_below="@id/txtTitulo2"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="200sp"
        android:gravity="center"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/txtres"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:text="="
        android:layout_below="@id/txtTitulo2"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="300sp"
        android:gravity="center"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/txtRespuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSuma1"
        android:layout_marginTop="50sp"
        android:hint="Respuesta"
        android:textSize="25sp"
        android:textColor="#FF5722"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnCalificar"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_below="@id/txtRespuesta"
        android:layout_marginTop="20sp"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_marginLeft="10sp"
        android:onClick="pulsar"
        android:text="Calificar"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_below="@id/txtRespuesta"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="220sp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Salir"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:onClick="pulsar"
        />

</RelativeLayout>